exec swayidle -w \
         timeout $idle 'swaylock -f -c 000000' \
         timeout $dpms_off 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
         before-sleep 'swaylock -f -c 000000'

# To turn off monitors when swaylock is active
exec swayidle -w \
        timeout 10 'if pgrep -x swaylock; then swaymsg output "*" dpms off; fi' \
        resume 'swaymsg output "*" dpms on'

exec swaync

# pipewire stuff
exec /usr/bin/daemon --bind --respawn --pidfiles=$XDG_RUNTIME_DIR --name=pipewire /usr/bin/pipewire
exec /usr/bin/daemon --bind --respawn --pidfiles=$XDG_RUNTIME_DIR --name=pipewire-pulse /usr/bin/pipewire-pulse
exec /usr/bin/daemon --bind --respawn --pidfiles=$XDG_RUNTIME_DIR --name=pipewire-wireplumber /usr/bin/wireplumber
